{
	"compilerOptions": {
		"outDir": "build",
		"sourceMap": true,
		"noImplicitAny": false,
		"moduleResolution": "node",
		"target": "es2017",
		"jsx": "react",
		"allowJs": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["es2017", "dom", "webworker"]
	},
	"include": ["@types/**/*", "./src/**/*"]
}
